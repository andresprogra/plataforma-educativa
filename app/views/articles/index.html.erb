<div class="container">
	<% @articles.each do |article| %>
		<div class="articulo col-xs-12 col-md-6">
			<h1><%= link_to article.title, article %></h1>
			<div>
				<p>
					<!--<%= article.body %>-->
					<%= truncate(article.body, :length => 300) %>
				</p>
				<p><%= link_to "Editar", edit_article_path(article.id)%> - <%= link_to "Eliminar", article, method: :delete, class: "red" %></p>
			</div>
		</div>
	<% end %>
</div>

